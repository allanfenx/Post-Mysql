<%- include ('../../partials/header.ejs') %>

<body>
    <%- include ('../../partials/navbar.ejs') %>

    <div class="container mt-2">
        <h2>Artigos:</h2>
        <a class="btn btn-success mt-2" href="/admin/artigos/novo">Criar novo artigo</a>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titulo</th>
                    <th>Slug</th>
                    <th>Categoria</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% artigos.forEach(artigo =>{ %>
                <tr>         
                    <td><%= artigo.id%></td>
                    <td><%= artigo.titulo%></td>
                    <td><%= artigo.slug%></td>
                    <td><%= artigo.categoria.titulo%></td>
                    
                    <td>
                        <a href="/admin/artigos/edit/<%= artigo.id%>" class="btn btn-warning">Editar</a>
                    
                        <form method="POST" action="/artigos/delete" style="display:inline" onsubmit="confirma(event, this)">
                            <input type="hidden" name="id" value="<%= artigo.id %>">
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                    </td>
                </tr>
                <%})%>
            </tbody>
        </table>
    </div>

</body>
    <%- include ('../../partials/footer.ejs') %>
<script>
        function confirma(event, form){
            event.preventDefault()
            var decisao = confirm("Você quer deletar este artigo?")
            if(decisao){
                form.submit()
            }
        }
</script>