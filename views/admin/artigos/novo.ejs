<%- include ('../../partials/header.ejs') %>
<body>
    <%- include ('../../partials/navbar.ejs') %>

    <div class="container mt-2">
        <div class="card-header">
            <h2>Novo artigo:</h2>
        </div>
        <div class="card">
            <div class="card-body">
                <form action="/artigos/save" method="POST">
                        <input type="text" name="titulo" class="form-control" placeholder="Defina o titulo do artigo">
                        <textarea  class="form-control mt-2" placeholder="Escreva o artigo aqui!" name="corpo" id="artigo"></textarea>
                        <label>Categoria:</label>
                        <select name="categoria" class="form-control">
                            <% categorias.forEach((categoria)=>{ %>
                                <option value="<%= categoria.id%>"><%= categoria.titulo%></option>
                            <%})%>
                        </select>
                    <button class="btn btn-success mt-2">Cadastrar</button>
                </form>
            </div>
        </div>
    </div>
</body>

<%- include ('../../partials/footer.ejs') %>

<script src="/tinymce/js/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        language: "pt_BR",
        selector: "#artigo",
        plugins: [
            "advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons"
        ]
    })
</script>